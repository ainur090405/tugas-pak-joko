mixin haeder()
    header
      .logo Saturn News
      .menu-toggle(onclick="toggleMenu()" aria-label="Toggle menu")
        i.fas.fa-bars
      nav
        ul
          li: a(href="#home" onclick="closeMenu()") Beranda
          li: a(href="#nasional" onclick="closeMenu()") Nasional
          li: a(href="#terpopuler" onclick="closeMenu()") Terpopuler
          li: a(href="#hiburan" onclick="closeMenu()") Hiburan
          li: a(href="#film" onclick="closeMenu()") Film
          li: a(href="#kartun" onclick="closeMenu()") Kartun
          li
            a(href="#about-us" onclick="toggleDropdown(event)") About Us
            .about-dropdown
              .menu-item(onclick="closeMenu()") Kontak
              .menu-item(onclick="closeMenu()") Redaksi
              .menu-item(onclick="closeMenu()") Pedoman Berita
              .menu-item(onclick="closeMenu()") Visi dan Misi
              .menu-item(onclick="closeMenu()") FAQ
              .menu-item(onclick="closeMenu()") Disclaimer
        .search-bar
          input(type="text" placeholder="Cari...")
          button(aria-label="Search")
            i.fas.fa-search
    script.
      function toggleMenu() {
        const nav = document.querySelector('nav');
        nav.classList.toggle('active');
      }

      function closeMenu() {
        const nav = document.querySelector('nav');
        nav.classList.remove('active');
        document.querySelector('.about-dropdown').style.display = 'none'; // Close dropdown on link click
      }

      function toggleDropdown(event) {
        const dropdown = document.querySelector('.about-dropdown');
        dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        event.stopPropagation(); // Prevent event from bubbling up
      }

      document.addEventListener('click', function() {
        document.querySelector('.about-dropdown').style.display = 'none'; // Close dropdown if clicking outside
      });
