mixin edukasi-1()
    .container
      .card#card1
        .card-title HINDARI ROKOK DAN ALKOHOL
        img(src="https://storage.googleapis.com/a1aa/image/XG4ps1KgU0LhCBVAMaAbj4pBaY7Hq5UiJetcdye0Wfme0rrOB.jpg" alt="Illustration of a person wearing a mask with pollution elements like factories and cars in the background" width="600" height="300")
        .navigation
          span
          a(onclick="nextCard()") →

      .card#card2
        .card-title OLAHRAGA TERATUR
        img(src="https://storage.googleapis.com/a1aa/image/qW6uCTfFJvxyZi4xOy8S9JVtwuNvU1aRG1UW0Hbvj1bne6qTA.jpg" alt="Illustration of a person pointing to a recycle symbol" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          a(onclick="nextCard()") →

      .card#card3
        .card-title HINDARI STRES
        img(src="https://storage.googleapis.com/a1aa/image/szgzqiQCuELZDNmqWEyRnuyXJF0k3A5scuxkpyUB3e0oe6qTA.jpg" alt="Illustration of a person planting a tree" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          span

    script.
      let currentCard = 0;
      const cards = document.querySelectorAll(".card");

      function showCard(index) {
        cards.forEach((card, i) => {
          card.style.display = i === index ? "block" : "none";
        });
      }

      function nextCard() {
        if (currentCard < cards.length - 1) {
          currentCard++;
          showCard(currentCard);
        }
      }

      function prevCard() {
        if (currentCard > 0) {
          currentCard--;
          showCard(currentCard);
        }
      }

      showCard(currentCard);
