doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Saturn News - Berita Terkini
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
      }

      header {
          background-color: #517E81;
          color: white;
          padding: 15px 20px;
          display: flex;
          justify-content: space-between;
          align-items: center;
      }

      .logo {
          font-size: 24px;
      }

      nav {
          display: flex;
          position: relative;
      }

      nav ul {
          list-style-type: none;
          margin: 0;
          padding: 0;
          display: flex;
      }

      nav ul li {
          margin: 0 15px;
          position: relative;
      }

      nav ul li a {
          color: white;
          text-decoration: none;
          transition: color 0.3s;
      }

      nav ul li a:hover {
          color: #007bff;
      }

      .search-bar {
          position: relative;
      }

      .search-bar input {
          padding: 5px;
          border: none;
          border-radius: 5px;
      }

      .search-bar button {
          position: absolute;
          right: 0;
          border: none;
          background-color: #007bff;
          color: white;
          padding: 5px 10px;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s;
      }

      .search-bar button:hover {
          background-color: #0056b3;
      }

      .about-dropdown {
          display: none;
          position: absolute;
          top: 100%;
          left: 0;
          background-color: white;
          color: black;
          border-radius: 5px;
          box-shadow: 0 2px 5px rgba(0,0,0,0.2);
          z-index: 1;
      }

      .about-dropdown .menu-item {
          padding: 10px;
          cursor: pointer;
      }

      .about-dropdown .menu-item:hover {
          background-color: #f0f0f0;
      }

      @media (max-width: 768px) {
          nav ul {
              flex-direction: column;
              display: none;
          }
          nav.active ul {
              display: flex;
          }
          .menu-toggle {
              display: block;
              cursor: pointer;
          }
      }

      .menu-toggle {
          display: none;
          font-size: 24px;
          color: white;
      }

  body
    header
      div.logo Saturn News
      div.menu-toggle(onclick="toggleMenu()" aria-label="Toggle menu")
        i.fas.fa-bars
      nav
        ul
          li: a(href="#home" onclick="closeMenu()") Beranda
          li: a(href="#nasional" onclick="closeMenu()") Nasional
          li: a(href="#terpopuler" onclick="closeMenu()") Terpopuler
          li: a(href="#hiburan" onclick="closeMenu()") Hiburan
          li: a(href="#film" onclick="closeMenu()") Film
          li: a(href="#kartun" onclick="closeMenu()") Kartun
          li
            a(href="#about-us" onclick="toggleDropdown(event)") About Us
            div.about-dropdown
              div.menu-item(onclick="closeMenu()") Kontak
              div.menu-item(onclick="closeMenu()") Redaksi
              div.menu-item(onclick="closeMenu()") Pedoman Berita
              div.menu-item(onclick="closeMenu()") Visi dan Misi
              div.menu-item(onclick="closeMenu()") FAQ
              div.menu-item(onclick="closeMenu()") Disclaimer
        div.search-bar
          input(type="text" placeholder="Cari...")
          button(aria-label="Search")
            i.fas.fa-search
    script.
      function toggleMenu() {
          const nav = document.querySelector('nav');
          nav.classList.toggle('active');
      }

      function closeMenu() {
          const nav = document.querySelector('nav');
          nav.classList.remove('active');
          document.querySelector('.about-dropdown').style.display = 'none';
      }

      function toggleDropdown(event) {
          const dropdown = document.querySelector('.about-dropdown');
          dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
          event.stopPropagation();
      }

      document.addEventListener('click', function() {
          document.querySelector('.about-dropdown').style.display = 'none';
      });