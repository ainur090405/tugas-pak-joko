mixin edukasi-4()
    .container
      .card#card1
        .card-title PEMANTAUAN CUACA
        img(src="https://storage.googleapis.com/a1aa/image/y7uhfPaM1wQDRK6u4HsP3DU96yFOu1En123VQqoBssrQsd1JA.jpg" alt="Illustration of a person wearing a mask with pollution elements like factories and cars in the background" width="600" height="300")
        .navigation
          span
          a(onclick="nextCard()") →

      .card#card2
        .card-title KONTROL POLUSI
        img(src="https://storage.googleapis.com/a1aa/image/NV6fuCoOyu3XACfefGEa1s7T021mi3g6LWwx4ELKBJzAitrOB.jpg" alt="Illustration of a person pointing to a recycle symbol" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          a(onclick="nextCard()") →

      .card#card3
        .card-title PENCEGAHAN PERUBAHAN IKLIM
        img(src="https://storage.googleapis.com/a1aa/image/Rr7eUW0smaWtOKlIf4AD3kZjrRiTUe9iEVCdjYCOiYeMitrOB.jpg" alt="Illustration of a person planting a tree" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          span

    script.
      let currentCard = 0;
      const cards = document.querySelectorAll(".card");

      function showCard(index) {
        cards.forEach((card, i) => {
          card.style.display = i === index ? "block" : "none";
        });
      }

      function nextCard() {
        if (currentCard < cards.length - 1) {
          currentCard++;
          showCard(currentCard);
        }
      }

      function prevCard() {
        if (currentCard > 0) {
          currentCard--;
          showCard(currentCard);
        }
      }

      showCard(currentCard);
