doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Health Tips
    link(rel="stylesheet" href="../info.css")
  body
    .container
      .section.active
        h2 HINDARI ROKOK DAN ALKOHOL
        img(src="https://storage.googleapis.com/a1aa/image/iRTfXUyi6fiM40duJ3GKeHEsZDMQQZdC0aeGAyY4GFA8zknOB.jpg" alt="No smoking and alcohol sign")
        .arrow.arrow-right(onclick="nextSection()") →
      
      .section
        h2 OLAHRAGA TERATUR
        img(src="https://storage.googleapis.com/a1aa/image/Axqgwt0GQmqxFl7gAfci2uMhmdhHYCwYSZpeGGqGDuW8M5pTA.jpg" alt="People exercising in a park")
        .arrow.arrow-left(onclick="prevSection()") ←
        .arrow.arrow-right(onclick="nextSection()") →
      
      .section
        h2 HINDARI STRES
        img(src="https://storage.googleapis.com/a1aa/image/oGJe8117kCWxAKzLZFIe5h9TAqluBeizayFQBxNwhPE7ZyTnA.jpg" alt="People enjoying at a zoo")
        .arrow.arrow-left(onclick="prevSection()") ←

    script.
      let currentSection = 0; // Index section saat ini
      const sections = document.querySelectorAll('.section'); // Mengambil semua section

      function showSection(index) {
          sections.forEach((section, i) => {
              section.classList.toggle('active', i === index); // Tampilkan section sesuai index
          });
      }

      function nextSection() {
          currentSection = (currentSection + 1) % sections.length; // Pindah ke section berikutnya
          showSection(currentSection);
      }

      function prevSection() {
          currentSection = (currentSection - 1 + sections.length) % sections.length; // Pindah ke section sebelumnya
          showSection(currentSection);
      }

