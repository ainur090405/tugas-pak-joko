doctype html
html
  head
    title Environmental Awareness
    link(rel="stylesheet" href="edukasi 3.css")

  body
    .container
      .card#card1
        .card-title POLA HIDUP SEHAT
        img(src="https://storage.googleapis.com/a1aa/image/6EsQv7s9AjLeWiN8JCus3O8YdvN7YMKFMSEKJZYtHf0LP7qTA.jpg" alt="Illustration of a person wearing a mask with pollution elements like factories and cars in the background" width="600" height="300")
        .navigation
          span
          a(onclick="nextCard()") →

      .card#card2
        .card-title DIET SEHAT
        img(src="https://storage.googleapis.com/a1aa/image/Fyf5MTI7lBxNHKjQYJdPDqz1gJZ84SgKvaedIyxnaozNP7qTA.jpg" alt="Illustration of a person pointing to a recycle symbol" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          a(onclick="nextCard()") →

      .card#card3
        .card-title OLAHRAGA TERATUR
        img(src="https://storage.googleapis.com/a1aa/image/zhoReyj8lJXiNSV2YntnzP0HrG4VHDR2WrPY6MzfPUFKP7qTA.jpg" alt="Illustration of a person planting a tree" width="600" height="300")
        .navigation
          a(onclick="prevCard()") ←
          span

    script.
      let currentCard = 0;
      const cards = document.querySelectorAll(".card");

      function showCard(index) {
        cards.forEach((card, i) => {
          card.style.display = i === index ? "block" : "none";
        });
      }

      function nextCard() {
        if (currentCard < cards.length - 1) {
          currentCard++;
          showCard(currentCard);
        }
      }

      function prevCard() {
        if (currentCard > 0) {
          currentCard--;
          showCard(currentCard);
        }
      }

      showCard(currentCard);
